# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Phazur Labs Academy

# Video Storage (BunnyCDN - Optional, falls back to Supabase Storage)
# Get these from your BunnyCDN dashboard: https://dash.bunny.net/storage
BUNNYCDN_API_KEY=                    # Storage Zone API Key
BUNNYCDN_STORAGE_ZONE=               # Storage Zone Name (e.g., "phazur-videos")
BUNNYCDN_HOSTNAME=                   # CDN Hostname (e.g., "phazur-videos.b-cdn.net")
BUNNYCDN_SECURITY_KEY=               # Token Authentication Key (for signed URLs)

# Email Configuration (for notifications)
RESEND_API_KEY=
EMAIL_FROM=noreply@phazurlabs.academy

# Payment Integration (Optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# AI Features (Optional - for AI tutoring)
OPENAI_API_KEY=

# HeyGen AI Video Generation
# Get your API key from: https://app.heygen.com/settings?nav=API
HEYGEN_API_KEY=

# Certificate Generation
CERTIFICATE_SECRET_KEY=your_certificate_secret
